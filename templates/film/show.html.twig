{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ film.title }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ film.year ? film.year|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ film.country }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ film.director }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ film.image }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ film.note }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ film.comment }}</td>
            </tr>
            <tr>
                <th>Dateview</th>
                <td>{{ film.dateview ? film.dateview|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('film_index') }}">back to list</a>

    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
{% endblock %}
